package lnt;

public class DataTypes {

public static void main(String[] args) {

	System.out.println("********DATA TYPES*************");
	
	// Integer Types
	int a = 1;
	short b = 2;
	byte c  = 3;
	long d = 7645645;
	System.out.println("Integer Datatypes:  "+a+ "..." +b+ "...." +c+ "....." +d);

	// Float Types
	float a1 = 100.1000F;
	double b1 = 200.10;
	System.out.println("Float Datatypes:  "+a1+ "..." +b1);

	// Character Types
	char ch1 = 88;
	System.out.println("Character Datatypes:  " +ch1);

	// Boolean Types
	boolean a2 = true;
	boolean b2 = false;
	System.out.println("Boolean dataypes:  " +a2+ "...." +b2);

	/*
	 byte  number 1 byte
	 short number 2 bytes
	 int  number 4 bytes
	 long number 8 bytes
	 float decimal number 4 bytes
	 double decimal number 8 bytes
	 char character 2 bytes
	 boolean true or false 1 byte 
	 */
	
	
}

}
